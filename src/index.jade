doctype html
html(lang='en-US' ng-app="capstone")
  head
    base(href="/")
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Bundler

    link(rel='stylesheet', href='lib/build.css')
    link(rel="stylesheet" href="lib/foundation-icons/foundation-icons.css")
    link(rel='stylesheet', href='css/main.css')
    link(href='https://fonts.googleapis.com/css?family=Lato:400,900,700,300|Noto+Serif:400,700italic,700' rel='stylesheet' type='text/css')

  body
    .menu-top(ng-controller="detailsCtrl")
      .menu-group.dark
        .menu-group-left
          ul.dark.menu-bar
            li(ng-if="!currentUser"): a(ui-sref="prelogin")  ::BetterBookmarks
            li(ng-if="currentUser"): a(ui-sref="start.dash") ::BetterBookmarks

        .menu-group-right
          ul.dark.menu-bar
            li(ng-if="!currentUser"): a(ui-sref="login") Login
            li(ng-if="currentUser"): a(method="post" ng-click="logout()") Logout
            li(ng-if="!currentUser"): a(ui-sref="signup") Sign up



    ui-view.grid-frame
  //- vendor compiled scripts
  script(src='lib/build.js')
  //- front end scripts
  script(src='js/main.config.js')
  script(src='js/bDash.controller.js')
  script(src='js/auth.controller.js')
  script(src='js/confirmPassword.js')
  script(src='js/auth.controller.js')
  script(src='js/main.factory.js')





